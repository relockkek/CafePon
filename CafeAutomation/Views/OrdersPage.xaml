<Page x:Class="CafeAutomation.Views.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Заказы">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Добавить" Command="{Binding AddOrder}" Margin="5" Width="100" Background="#007BFF" Foreground="White"/>
            <Button Content="Обновить" Command="{Binding UpdateOrder}" Margin="5" Width="100" Background="#28A745" Foreground="White"/>
            <Button Content="Удалить" Command="{Binding RemoveOrder}" Margin="5" Width="100" Background="#DC3545" Foreground="White"/>
        </StackPanel>

        <DataGrid ItemsSource="{Binding Orders}" SelectedItem="{Binding SelectedOrder}"
                  Grid.Row="1" AutoGenerateColumns="False" Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50"/>
                <DataGridTextColumn Header="Сотрудник" Binding="{Binding EmployeeID}"/>
                <DataGridTextColumn Header="Стол" Binding="{Binding TableNumber}"/>
                <DataGridTextColumn Header="Дата заказа" Binding="{Binding OrderDate}"/>
                <DataGridTextColumn Header="Сумма" Binding="{Binding TotalAmount}"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding StatusID}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>