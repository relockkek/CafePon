<Window x:Class="CafeAutomation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Автоматизация кафе" Height="700" Width="1000">
    <Grid>
        <!-- Разделение на две колонки -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель навигации -->
        <StackPanel Grid.Column="0" Background="#2E2E2E" VerticalAlignment="Stretch">
            <Button Content="Главная" Click="NavigateToHome_Click" Background="#3E3E3E" Foreground="White" Margin="0,10,0,0" Padding="10" Height="40">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3E3E3E"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#28A745"/>
                                <!-- Зелёный при наведении -->
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#DC3545"/>
                                <!-- Красный при нажатии -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Меню" Click="NavigateToMenu_Click" Background="#3E3E3E" Foreground="White" Margin="0,10,0,0" Padding="10" Height="40">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3E3E3E"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#28A745"/>
                                <!-- Зелёный при наведении -->
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#DC3545"/>
                                <!-- Красный при нажатии -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Заказы" Click="NavigateToOrders_Click" Background="#3E3E3E" Foreground="White" Margin="0,10,0,0" Padding="10" Height="40">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3E3E3E"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#28A745"/>
                                <!-- Зелёный при наведении -->
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#DC3545"/>
                                <!-- Красный при нажатии -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Бронирование" Click="NavigateToReservations_Click" Background="#3E3E3E" Foreground="White" Margin="0,10,0,0" Padding="10" Height="40">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3E3E3E"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#28A745"/>
                                <!-- Зелёный при наведении -->
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#DC3545"/>
                                <!-- Красный при нажатии -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Сотрудники" Click="NavigateToEmployees_Click" Background="#3E3E3E" Foreground="White" Margin="0,10,0,0" Padding="10" Height="40">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3E3E3E"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#28A745"/>
                                <!-- Зелёный при наведении -->
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#DC3545"/>
                                <!-- Красный при нажатии -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Выход" Click="ExitApp_Click" Background="#D9534F" Foreground="White" Margin="0,20,0,0" Padding="10" Height="40">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#D9534F"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF5252"/>
                                <!-- Ярко-красный при наведении -->
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#B71C1C"/>
                                <!-- Темно-красный при нажатии -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <!-- Основная область контента -->
        <Frame Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>