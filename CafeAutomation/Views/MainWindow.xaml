<Window x:Class="CafeAutomation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Автоматизация кафе" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Верхнее меню -->
        <Menu DockPanel.Dock="Top" Background="#0078D7" Foreground="White" FontWeight="Bold">
            <MenuItem Header="Меню" Click="NavigateToMenu_Click"/>
            <MenuItem Header="Главная" Click="NavigateToHome_Click"/>
            <MenuItem Header="Заказы" Click="NavigateToOrders_Click"/>
            <MenuItem Header="Выход" Click="Exit_Click"/>
        </Menu>

        <!-- Основное содержимое -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
    </DockPanel>
</Window>
