<Page x:Class="CafeAutomation.Views.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Главная" Height="600" Width="800">

    <Page.Resources>
        <!-- Стиль для кнопки с закруглёнными углами -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007BFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="Margin" Value="0,0,0,30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#F8F9FA" Margin="40">
        <!-- Заголовок -->
        <TextBlock Text="Добро пожаловать!" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top"
                       Margin="0 5 0 0"/>

        <!-- Контейнер для карточек -->
        <Grid Grid.Row="1" Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Карточка "Выручка за сегодня" -->
            <Border Grid.Column="0" BorderBrush="#CED4DA" BorderThickness="1" Background="White" Padding="20" CornerRadius="8" Height="100" Margin="0,192,0,228">
                <StackPanel>
                    <TextBlock Text="Выручка за сегодня" FontSize="16" FontWeight="Bold"/>
                    <TextBlock Text="{Binding TodayRevenue}" FontSize="14" Margin="0,10,0,0" Foreground="#495057"/>
                </StackPanel>
            </Border>

            <!-- Карточка "Популярное блюдо" -->
            <Border Grid.Column="1" BorderBrush="#CED4DA" BorderThickness="1" Background="White" Padding="20" CornerRadius="8" Height="100" Margin="0,192,0,228">
                <StackPanel>
                    <TextBlock Text="Популярное блюдо" FontSize="16" FontWeight="Bold"/>
                    <TextBlock Text="{Binding PopularDish}" FontSize="14" Margin="0,10,0,0" Foreground="#495057"/>
                </StackPanel>
            </Border>

            <!-- Карточка "Загруженность столов" -->
            <Border Grid.Column="2" BorderBrush="#CED4DA" BorderThickness="1" Background="White" Padding="20" CornerRadius="8" Height="100" Margin="0,192,0,228">
                <StackPanel>
                    <TextBlock Text="Столы заняты" FontSize="16" FontWeight="Bold"/>
                    <TextBlock Text="{Binding TablesStatus}" FontSize="14" Margin="0,10,0,0" Foreground="#495057"/>
                </StackPanel>
            </Border>
        </Grid>
        <!-- Блок с кнопкой "Сформировать отчёт" -->
        <Button Content="Сформировать отчёт" 
                Command="{Binding LoadReport}" 
                Width="160" 
                Height="35"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,60,30"/>
    </Grid>
</Page>