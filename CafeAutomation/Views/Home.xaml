<Page x:Class="CafeAutomation.Views.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Главная">

    <Page.Resources>
        <!--Стиль для кнопки-->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007BFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="Margin" Value="0,0,0,30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#F8F9FA" Margin="20">
        <!-- Заголовок -->
        <TextBlock Text="Добро пожаловать!" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" />


        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0">
            <!-- Выручка за сегодня -->
            <Border BorderBrush="#CED4DA" BorderThickness="1" Background="White" Padding="20" CornerRadius="8" Width="200" Height="100">
                <StackPanel>
                    <TextBlock Text="Выручка за сегодня" FontSize="16" FontWeight="Bold"/>
                    <TextBlock Text="{Binding TodayRevenue}" FontSize="14" Margin="0,10,0,0" Foreground="#495057"/>
                </StackPanel>
            </Border>

            <!--Популярное блюдо-->
            <Border BorderBrush="#CED4DA" BorderThickness="1" Background="White" Padding="20" CornerRadius="8" Width="200" Height="100" Margin="20,0,20,0">
                <StackPanel>
                    <TextBlock Text="Популярное блюдо" FontSize="16" FontWeight="Bold"/>
                    <TextBlock Text="{Binding PopularDish}" FontSize="14" Margin="0,10,0,0" Foreground="#495057"/>
                </StackPanel>
            </Border>

            <!--Загруженность столов-->
            <Border BorderBrush="#CED4DA" BorderThickness="1" Background="White" Padding="20" CornerRadius="8" Width="200" Height="100">
                <StackPanel>
                    <TextBlock Text="Столы заняты" FontSize="16" FontWeight="Bold"/>
                    <TextBlock Text="{Binding TablesStatus}" FontSize="14" Margin="0,10,0,0" Foreground="#495057"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!--Сформировать отчёт-->
        <Button Content="Сформировать отчёт" 
                Command="{Binding LoadReport}" 
                Width="160" 
                Height="35"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="0,0,0,30"/>
    </Grid>
</Page>