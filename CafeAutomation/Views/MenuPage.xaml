<Page x:Class="CafeAutomation.Views.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Меню">

    <Grid Background="#F8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Управление меню"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,30"
                   Grid.Row="0" />

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <WrapPanel HorizontalAlignment="Center" Margin="40 0">
                <ItemsControl ItemsSource="{Binding Categories}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Width="160" Height="200" Margin="15"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Cursor="Hand"
                                    Command="{Binding DataContext.NavigateToCategoryCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                    CommandParameter="{Binding}">
                                <Border Background="White"
                                        CornerRadius="10"
                                        BorderBrush="#DDD"
                                        BorderThickness="1"
                                        Padding="10"
                                        Width="160"
                                        Height="200">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Image Width="80" Height="80" Margin="5"
                                               Source="/Assets/category_placeholder.png"
                                               Stretch="Uniform" />
                                        <TextBlock Text="{Binding}"
                                                   TextAlignment="Center"
                                                   FontWeight="SemiBold"
                                                   FontSize="14"
                                                   Margin="10 5 10 0" />
                                    </StackPanel>
                                </Border>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Page>
